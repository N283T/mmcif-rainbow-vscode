{
  "name": "mmcif-rainbow",
  "displayName": "Rainbow mmCIF",
  "description": "Column-based coloring for mmCIF loops.",
  "version": "0.0.1",
  "publisher": "N283T",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/N283T/mmcif-rainbow-vscode"
  },
  "engines": {
    "vscode": "^1.90.0",
    "node": ">=20"
  },
  "icon": "resources/icon.png",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mmcif"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mmcif",
        "aliases": [
          "mmCIF",
          "MMCIF"
        ],
        "extensions": [
          ".cif",
          ".mmcif"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mmcif",
        "scopeName": "source.mmcif",
        "path": "./syntaxes/mmcif.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "mmcif",
        "scopes": {
          "rainbow1": [
            "entity.name.type",
            "entity.name.class"
          ],
          "rainbow2": [
            "keyword",
            "storage.type"
          ],
          "rainbow3": [
            "string",
            "string.quoted"
          ],
          "rainbow4": [
            "variable.parameter",
            "variable.other"
          ],
          "rainbow5": [
            "constant.numeric",
            "constant.language"
          ],
          "rainbow6": [
            "support.function",
            "entity.name.function"
          ],
          "rainbow7": [
            "support.class",
            "entity.name.type"
          ],
          "rainbow8": [
            "entity.name.section",
            "markup.heading"
          ],
          "rainbow9": [
            "keyword.control",
            "keyword.operator"
          ],
          "rainbow10": [
            "variable.language",
            "constant.character"
          ]
        }
      }
    ],
    "configurationDefaults": {
      "[mmcif]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.bracketPairColorization.enabled": false
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "echo \"No lint configured\"",
    "test": "npm run compile && node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.6.0"
  },
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.2"
  }
}