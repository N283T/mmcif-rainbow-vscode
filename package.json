{
  "name": "mmcif-rainbow",
  "displayName": "Rainbow mmCIF",
  "version": "0.0.9",
  "publisher": "N283T",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/N283T/mmcif-rainbow-vscode"
  },
  "engines": {
    "vscode": "^1.90.0",
    "node": ">=20"
  },
  "icon": "resources/icon.png",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mmcif"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mmcif",
        "aliases": [
          "mmCIF",
          "MMCIF"
        ],
        "extensions": [
          ".cif",
          ".mmcif"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mmcif",
        "scopeName": "source.mmcif",
        "path": "./syntaxes/mmcif.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "mmcif",
        "scopes": {
          "rainbow1": ["entity.name.tag.mmcif"],
          "rainbow2": ["keyword.mmcif"],
          "rainbow3": ["string.mmcif"],
          "rainbow4": ["entity.name.function.mmcif"],
          "rainbow5": ["constant.numeric.mmcif"],
          "rainbow6": ["variable.parameter.mmcif"],
          "rainbow7": ["support.function.mmcif"],
          "rainbow8": ["entity.name.type.mmcif"],
          "rainbow9": ["markup.heading.mmcif"],
          "rainbow10": ["constant.language.mmcif"]
        }
      }
    ],
    "configurationDefaults": {
      "[mmcif]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.bracketPairColorization.enabled": false
      },
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "rainbow1:mmcif": "#8B8FE8",
          "rainbow2:mmcif": "#E06C75",
          "rainbow3:mmcif": "#98C379",
          "rainbow4:mmcif": "#E5C07B",
          "rainbow5:mmcif": "#61AFEF",
          "rainbow6:mmcif": "#C678DD",
          "rainbow7:mmcif": "#56B6C2",
          "rainbow8:mmcif": "#D19A66",
          "rainbow9:mmcif": "#FF79C6",
          "rainbow10:mmcif": "#7FDBCA"
        }
      }
    },
    "configuration": {
      "title": "Rainbow mmCIF",
      "properties": {
        "mmcif-rainbow.hover.showCategory": {
          "type": "boolean",
          "default": true,
          "description": "Show tooltip for category names"
        },
        "mmcif-rainbow.hover.showAttribute": {
          "type": "boolean",
          "default": true,
          "description": "Show tooltip for attributes (field names)"
        },
        "mmcif-rainbow.hover.showValue": {
          "type": "boolean",
          "default": true,
          "description": "Show tooltip for data values"
        }
      }
    },
    "commands": [
      {
        "command": "mmcif-rainbow.search",
        "title": "mmCIF: Go to Category...",
        "category": "mmCIF"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "mmcif-rainbow.search",
          "when": "resourceLangId == mmcif",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext .ts",
    "test": "npm run compile && node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.6.0"
  },
  "volta": {
    "node": "24.11.1",
    "npm": "11.6.2"
  }
}
